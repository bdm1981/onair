extends layout

block content
  .container
    .row
      br
      .col-md-5
        .panel.panel-default
          .panel-heading 
            h3  Status
          table.table
            tr
              td
                strong Mode:
              td
                span#mode
            tr
              td
                strong Light:
              td
                span#status
            tr
              td
                strong Presence:
              td
                span#statusClient
            tr
              td
                strong Status:
              td
                span#statusMessage
            tr
              td
                strong Last Update:
              td
                span#statusUpdate
      .col-md-5
        - console.log(mode)
        if mode == "XMPP" 
          .panel.panel-default
            .panel-heading 
              h3  Monitoring
            table.table
              tr
                td
                  strong Watching:
                td
                  span#monitor
              tr
                td
                  strong Keywords:
                td
                  span #{keywords}
        else
          .panel.panel-default
            .panel-heading
              h3 Manual Mode
            table.table
              tr
                td
                  button#on.btn.btn-danger(type="button") On
              tr
                td
                  button#off.btn.btn-success(type="button") Off

        br
        button.btn.btn-primary(type='button', onclick="location.href='/setup'") Update Settings